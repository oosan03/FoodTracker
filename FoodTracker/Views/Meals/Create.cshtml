@model FoodTracker.Models.Meal

@{
    ViewData["Title"] = "Create";
}

<h1 class="my-3">Add New Meal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateConsumed" class="control-label mx-1 fw-semibold">Date</label>
                <input type="date" asp-for="DateConsumed" class="form-control" />
                <span asp-validation-for="DateConsumed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label mx-1 fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calories" class="control-label mx-1 fw-semibold"></label>
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proteins" class="control-label mx-1 fw-semibold"></label>
                <input asp-for="Proteins" class="form-control" />
                <span asp-validation-for="Proteins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sugars" class="control-label mx-1 fw-semibold"></label>
                <input asp-for="Sugars" class="form-control" />
                <span asp-validation-for="Sugars" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Type" class="control-label mx-1 fw-semibold">Meal Type: </label>
                <select asp-for="Type" class="control-label">
                    <option value="Breakfast">Breakfast</option>
                    <option value="Lunch">Lunch</option>
                    <option value="Dinner">Dinner</option>
                    <option value="Snack">Snack</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Price" class="control-label mx-1 fw-semibold"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check my-3">
                <label class="form-check-label mx-1 fw-semibold">
                    <input class="form-check-input" asp-for="Homemade" /> @Html.DisplayNameFor(model => model.Homemade)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br /><hr />
<div class="my-3">
    <a class="btn btn-outline-success" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
